{
  "name": "bldr",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chef/bldr.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "concurrent \"npm run build-js\" \"npm run build-css\"",
    "build-css": "npm run lint-css && node-sass --source-map=true --include-path=node_modules/bourbon-neat/app/assets/stylesheets --include-path=node_modules/bourbon/app/assets/stylesheets --include-path=node_modules/normalize-scss/sass --include-path=node_modules/normalize-scss/node_modules/support-for/sass --include-path=stylesheets --output=. app/app.scss",
    "build-css-watch": "npm run build-css && npm run build-css -- --watch",
    "build-js": "webpack",
    "build-js-watch": "npm run build-js -- --watch",
    "clean": "concurrent \"npm run clean-js\" \"npm run clean-css\"",
    "clean-css": "rm -fv app.css app.css.map",
    "clean-js": "rm -fv app.js app.js.map app**/*.js app**/*.js.map",
    "format-js": "tsfmt --replace app**/*.ts",
    "lint": "concurrent \"npm run lint-css\" \"npm run lint-js\"",
    "lint-css": "sass-lint --verbose stylesheets**/*.scss app**/*.scss",
    "lint-css-watch": "watch 'npm run lint-css'",
    "lint-js": "tslint app**/*.ts",
    "lint-js-watch": "watch 'npm run lint-js'",
    "dist": "mkdir -p dist && rm -rf dist/* && npm run build && cp -R app.css* app.js* favicon.ico fixtures index.html dist",
    "help": "cat README.md",
    "repl": "ts-node",
    "postinstall": "tsd install",
    "start": "concurrent \"npm run build-css-watch\" \"npm run build-js-watch\" \"npm run test-unit -- --no-single-run\" \"npm run lint-css-watch\" \"lite-server\"",
    "test": "npm run test-unit",
    "test-watch": "npm run test-unit-watch",
    "test-unit": "karma start",
    "test-unit-watch": "npm run test-unit -- --no-single-run"
  },
  "dependencies": {
    "angular2": "^2.0.0-beta.2",
    "ansi_up": "^1.3.0",
    "bourbon": "^4.2.6",
    "bourbon-neat": "^1.7.2",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "immutable": "^3.7.6",
    "linq": "^3.0.5",
    "moment": "^2.11.2",
    "normalize-scss": "^4.0.3",
    "redux": "^3.0.5",
    "redux-thunk": "^1.0.3",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "whatwg-fetch": "^0.11.0",
    "zone.js": "^0.5.10"
  },
  "devDependencies": {
    "assertion-error": "^1.0.1",
    "concurrently": "^1.0.0",
    "deep-eql": "^0.1.3",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lite-server": "^1.3.1",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "phantomjs-prebuilt": "^2.1.3",
    "sass-lint": "^1.4.0",
    "sinon": "^1.17.3",
    "ts-loader": "^0.8.0",
    "ts-node": "^0.5.5",
    "tsd": "^0.6.5",
    "tslint": "^3.2.2",
    "tslint-loader": "^2.1.0",
    "type-detect": "^1.0.0",
    "typescript": "^1.7.3",
    "typescript-formatter": "^1.2.0",
    "watch": "^0.17.1",
    "webpack": "^1.12.11"
  }
}
