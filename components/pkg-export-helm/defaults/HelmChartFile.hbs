name: {{name}}
version: {{version}}
tillerVersion: ">=2.7.2"
{{~ #if description}}
description: {{description}}
{{~/if ~}}
{{~ #if appVersion}}
appVersion: {{appVersion}}
{{~ /if ~}}
{{~ #if keywords}}
keywords:
{{~ #each keywords}}
  - {{this}}
{{~ /each ~}}
{{~ /if ~}}
{{~ #if home}}
home: {{home}}
{{~ /if ~}}
{{~ #if icon}}
icon: {{icon}}
{{~ /if ~}}
{{~ #if sources}}
sources:
{{~ #each sources}}
  - {{this}}
{{~ /each ~}}
{{~ /if ~}}
{{~ #if maintainers}}
maintainers:
{{~ #each maintainers}}
  - name: {{this.name}}
  {{~ #if this.email}}
    email: {{this.email}}
  {{~ /if ~}}
  {{~ #if this.url}}
    url: {{this.url}}
  {{~ /if ~}}
{{~ /each ~}}
{{~ /if ~}}
{{~ #if deprecated}}
deprecated: yes
{{~ /if ~}}
